
# build environment

THIRD_PARTY_ROOT=`pwd`
BUILD_ROOT=${THIRD_PARTY_ROOT}/build
BUILD_SCRIPTS=${BUILD_ROOT}/scripts
BUILD_ARTIFACTS=${BUILD_ROOT}/artifacts
DISTFILES=${THIRD_PARTY_ROOT}/distfiles
INSTALL_PREFIX=${THIRD_PARTY_ROOT}/install

PKG_CONFIG_INSTALL=${INSTALL_PREFIX}/lib/pkgconfig
if [ -z "${PKG_CONFIG_PATH}" ]; then
   PKG_CONFIG_PATH=${PKG_CONFIG_INSTALL}:/usr/lib/pkgconfig:/usr/local/lib/pkgconfig
else
   PKG_CONFIG_PATH=${PKG_CONFIG_INSTALL}:${PKG_CONFIG_PATH}
fi

export \
   THIRD_PARTY_ROOT \
   BUILD_ROOT BUILD_SCRIPTS DISTFILES BUILD_ARTIFACTS \
   INSTALL_PREFIX PKG_CONFIG_PATH
