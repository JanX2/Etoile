ifeq ($(debug), yes)
        APP=$(APP_NAME).debug
else
        APP=$(APP_NAME).app
endif

after-all::
	@ echo "Copying menulets into app wrapper..." && \
          find Menulets -name '*.menulet' -exec cp -r '{}' '$(APP)/Resources' ';' && \
          echo "Copying system bar entries into app wrapper..." && \
          find SystemBarEntries -name '*.sysbarentry' -exec cp -r '{}' '$(APP)/Resources' ';' && \
          echo "Purging bogus SVN entries from app..." && \
          find "$(APP)" -type d -name .svn -print0 | xargs -0 /bin/rm -rf
